<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#C00016"
        android:gravity="center"
        android:padding="12dp"
        android:text="Simuladores"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Subtítulo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:text="Crédito Hipotecario en Colombia"
        android:textColor="#000000"
        android:textSize="20sp" />

    <!-- Campo de valor de la propiedad -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="* Valor de la propiedad"
        android:textColor="#C00016"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/propertyValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/edittext_border"
        android:hint="Ingrese el valor"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:padding="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="El valor de la propiedad no puede ser inferior a $70.000.000"
        android:textColor="#888888"
        android:layout_marginStart="16dp"
        android:textSize="12sp" />

    <!-- Campo de monto del préstamo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="* ¿Cuánto necesitas?"
        android:textColor="#C00016"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/loanAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/edittext_border"
        android:hint="Ingrese el valor"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:padding="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="El préstamo mínimo es de $50.000.000 y no puede exceder el 70% del valor de la propiedad para créditos hipotecarios, mientras que para leasing habitacional no puede exceder el 80% del valor de la propiedad."
        android:textColor="#888888"
        android:textSize="12sp" />

    <!-- Campo de plazo en años -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="* ¿A qué plazo necesitas el crédito (años)?"
        android:textColor="#C00016"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/loanTerm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/edittext_border"
        android:hint="Ingrese el valor"
        android:inputType="number"
        android:minHeight="48dp"
        android:padding="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:text="Van desde los 5 hasta los 20 años. El plazo más común es de 20 años."
        android:textColor="#888888"
        android:textSize="12sp" />

    <!-- Campo de Tasa de Interés Efectiva Anual -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="* ¿A qué tasa de interés efectiva anual (TAE)?"
        android:textColor="#C00016"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/interestRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/edittext_border"
        android:hint="Ingrese el valor"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:padding="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="16dp"
        android:text="Esta tasa depende de tu historial crediticio y del banco en el que pidas el crédito."
        android:textColor="#888888"
        android:textSize="12sp" />

    <!-- Botón Simulación -->
    <Button
        android:id="@+id/simulateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#C00016"
        android:paddingHorizontal="32dp"
        android:paddingVertical="12dp"
        android:text="Simular"
        android:textColor="#FFFFFF" />

    <!-- Texto para el resultado -->
    <TextView
        android:id="@+id/simulationResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="16dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="16sp"
        android:visibility="gone" />

</LinearLayout>
</ScrollView>